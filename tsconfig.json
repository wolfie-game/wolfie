{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "*": ["./src/*"]
    },
  },
  "include": ["src", "types/**/*.d.ts", "./node_modules/@types", "sw.js", "public/*"],
  "exclude": ["**/*.js"]
}
